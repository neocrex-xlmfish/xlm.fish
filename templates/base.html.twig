{# Base layout updated to include SEO + social meta include.
   Child templates should set a `meta` variable before extending this base
   or controllers can pass a 'meta' variable to the template context.
#}
<!doctype html>
<html lang="{{ app.request.locale|slice(0,2)|default('en') }}">
  <head>
    <meta charset="utf-8">
    {# Include SEO + social meta. If a page set a `meta` variable, it will be used. #}
    {% include '_meta.html.twig' with {'meta': meta}|default({}) %}

    {# Stylesheets / assets - adjust per project tooling #}
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
    {% endblock %}

    {% block head_extra %}{% endblock %}
  </head>
  <body>
    <header>
      {# site header / nav #}
      <nav>
        <a href="{{ path('homepage') }}">XLMFISH</a>
      </nav>
    </header>

    <main id="main" role="main">
      {% block body %}{% endblock %}
    </main>

    <footer>
      <p>&copy; {{ "now"|date("Y") }} XLMFISH</p>
    </footer>

    {% block javascripts %}
      <script src="{{ asset('build/app.js') }}"></script>
    {% endblock %}
  </body>
</html>