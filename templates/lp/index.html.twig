{% extends 'base.html.twig' %}

{% block title %}Liquidity Pools — XLMFISH{% endblock %}

{% block head_extra %}
  <meta property="og:title" content="XLMFISH Liquidity Pools" />
  <meta property="og:description" content="View liquidity pools containing XLMFISH and their metrics." />
{% endblock %}

{% block body %}
  <section class="py-12 px-6 theme-section">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-2xl font-semibold text-center mb-6 heading-accent">Liquidity Pools</h1>

      {# Pie chart directly under the title #}
      <div class="mb-6 flex justify-center">
        <div class="theme-card rounded-lg p-4 shadow border w-full max-w-lg">
          <div class="mb-3 text-sm theme-muted text-center">Top Pools Distribution</div>
          <div class="w-full mx-auto">
            <canvas id="distributionChart" width="320" height="320"></canvas>
          </div>
        </div>
      </div>

      {# Total liquidity #}
      <div class="mb-6">
        <div class="theme-card rounded-lg p-4 shadow border">
          <div class="text-sm theme-muted">Total Liquidity (XLMFISH)</div>
          <div id="total-liquidity" class="text-xl font-bold">—</div>
          <div id="total-liquidity-usd" class="text-sm theme-muted">≈ —</div>
        </div>
      </div>

      {# How we calculate #}
      <div class="mb-6">
        <div class="theme-card rounded-lg p-4 shadow border">
          <div class="text-sm theme-muted">How we calculate</div>
          <p class="theme-muted text-sm mb-0">
            We sum the XLMFISH reserves across all liquidity pools discovered via Horizon and show a USD approximation by multiplying by the estimated XLMFISH/USD price. Values are approximate and may be delayed.
          </p>
        </div>
      </div>

      {# Controls: search + sort on first row; refresh below + updated date on the right (two-row layout) #}
      <div class="mb-6">
        <div class="theme-card rounded-lg p-4 shadow border">
          <div class="flex flex-col gap-3">
            <div class="flex gap-2 items-center">
              <input id="search-input" type="search" placeholder="Search pools or tokens" class="flex-1 px-3 py-2 rounded border theme-card" />
              <select id="sort-select" class="px-2 py-2 rounded border theme-card">
                <option value="usd-desc">USD (desc)</option>
                <option value="usd-asc">USD (asc)</option>
                <option value="liquidity-desc">Liquidity (desc)</option>
                <option value="liquidity-asc">Liquidity (asc)</option>
                <option value="name-asc">Name (A→Z)</option>
                <option value="name-desc">Name (Z→A)</option>
              </select>
            </div>

            <div class="flex items-center justify-between">
              <div>
                <button id="lp-refresh" class="px-3 py-2 rounded bg-primary text-white">Refresh</button>
              </div>
              <div class="text-sm theme-muted" id="pools-updated">Loading…</div>
            </div>
          </div>
        </div>
      </div>

      {# Loading message #}
      <div class="mb-6">
        <div id="loading-message" class="theme-card rounded-lg p-4 shadow border theme-muted text-center">Loading pool data…</div>
      </div>

      {# Pools table (Status column removed) #}
      <div class="theme-card rounded-lg p-4 shadow">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="theme-muted">
              <tr>
                <th class="px-4 py-3">#</th>
                <th class="px-4 py-3">Pool</th>
                <th class="px-4 py-3 text-right">USD Value</th>
                <th class="px-4 py-3 text-right">Liquidity</th>
              </tr>
            </thead>
            <tbody id="pools-table-body">
              <tr>
                <td class="px-4 py-3 theme-muted">—</td>
                <td class="px-4 py-3 theme-muted">Loading…</td>
                <td class="px-4 py-3 text-right">—</td>
                <td class="px-4 py-3 text-right">—</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

{% block scripts %}
  <script>
    // Bridge for older code if needed
    document.addEventListener('DOMContentLoaded', () => {
      window.initLpPage = window.initLpPage || function(){};
    });
  </script>
{% endblock %}